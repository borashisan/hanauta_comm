<li class="micropost-<%= micropost.id %>">
  <%= link_to micropost.user do %>
    <i class="fas fa-user-circle"></i>
  <% end %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="user">が投稿</span>
  <span class="title"><%= micropost.title %></span>
  <audio class="player" src="<%= "#{micropost.file}" %>" controls="">
    <a href="<%= "#{micropost.file}" %>">ダウンロード</a>
  </audio>
    <%= link_to "スレに飛ぶ", micropost if controller_path == 'sessions' %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                              data: { confirm: "本当によろしいですか？" } %>
    <% end %>
  </span>
</li>